{% extends "::base.html.twig" %}

{% block title %}Création classe{% endblock title%}
{% block breadcrumb %}
<ol class="breadcrumb">
	<li><a href="/">Home</a></li>
	<li>Classes</li>
</ol>
{% endblock breadcrumb %}

{% block mainContainer %}
			<div class="col-sm-4">
				<div class="well">
					<form action="{{ path('ath_classe_add') }}" method="post" {{ form_enctype(form) }}>
						{# Les erreurs générales du formulaire. #}
						{{ form_errors(form) }}
						<div>
							{{ form_label(form.name, "Nom de la classe") }}
							{{ form_errors(form.name) }}
							{{ form_widget(form.name) }}
						</div>
						{{ form_rest(form) }}
		    			<input type="submit" class="btn btn-primary" />
		  			</form>
				</div>

				{% for flashMessage in app.session.flashbag.get('notice') %}
    				<div class="flash-notice">
        				{{ flashMessage }}
    				</div>
				{% endfor %}
			</div>
			<div class="col-sm-8">
				<h1>Classes</h1>
				<ul>
    				{% for classe in listeClasse %}
        			<li>
        				<a href="{{ path('ath_classe_edit',{id: classe.id}) }}">{{ classe }}</a>
        				<a href="{{ path('ath_classe_del',{id: classe.id}) }}">
        					<span class="glyphicon glyphicon-trash"></span>
        				</a>
        			</li>
    				{% endfor %}
				</ul>
			</div>

{% endblock mainContainer %}

